{
  "name": "chatbot",
  "version": "1.0.0",
  "description": "A simple chatbot with OpenAI API integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "frontend": "node frontend-server.js",
    "frontend-dev": "nodemon frontend-server.js",
    "backend": "node server.js",
    "backend-dev": "nodemon server.js",
    "dev:all": "concurrently \"npm run backend-dev\" \"npm run frontend-dev\"",
    "start:all": "concurrently \"npm run backend\" \"npm run frontend\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "openai": "^4.20.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "chatbot",
    "openai",
    "nodejs",
    "frontend",
    "backend"
  ],
  "author": "",
  "license": "MIT"
}
